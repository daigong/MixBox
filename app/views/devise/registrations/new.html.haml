.row
  .span6
    =form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
      %fieldset
        %legend="新用户注册"
        = render "common/error_messages", :target => resource
        .clearfix
          = f.label "登录名"
          .input= f.text_field :login_name
        .clearfix
          = f.label "名字"
          .input= f.text_field :nick_name
        .clearfix
          = f.label "邮箱注册"
          .input= f.text_field :email, :placeholder => "foo@bar.com"
        .clearfix
          = f.label "密码"
          .input= f.password_field :password
        .clearfix
          = f.label "请再次输入密码"
          .input= f.password_field :password_confirmation
        .actions
          = f.submit "注册", :class => "btn primary"
  .span6
    .sign-up-message
      1111111111111111111111111111111111111
