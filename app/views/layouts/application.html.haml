!!!


%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
    %title= content_for?(:title) ? yield(:title) : "MixBox"
    = csrf_meta_tags
    = stylesheet_link_tag "application", :media => "all"
  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          %a.brand{:href => root_path} MixBox
          .container.nav-collapse
            %ul.nav
              -if user_signed_in?
                %li= link_to '退出', destroy_user_session_path, :method => :delete
                %li= link_to '我的帐号', edit_user_registration_path
              -else
                %li= link_to '登录', new_user_session_path
                %li= link_to '注册', new_user_registration_path
    .container
      .content
        .row
          .span12
            = notice_message
        = yield
      %footer
        %p © Company 2012
    = javascript_include_tag "application"
